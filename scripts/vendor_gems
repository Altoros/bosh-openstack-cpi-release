# #!/bin/bash

set -ex

. ./helpers.sh

download_sources nokogiri 1.6.6.2 https://github.com/sparklemotion/nokogiri/archive/v1.6.6.2.tar.gz
download_sources libxslt 1.1.28 ftp://ftp.xmlsoft.org/libxml2/libxslt-1.1.28.tar.gz

update_package_configs libxslt 1.1.28

set_environment_variables nokogiri 1.6.6.2
unarchive_package
go_to_build_folder
mkdir ./ports/archives
cp $blobs_folder/libxslt-1.1.28.tar.gz ./ports/archives
gem install bundler
bundle install
rake
rake gem
gem install --local pkg/nokogiri-1.6.6.2.gem

cpi_name="openstack"
cpi_dir=$app_root
cpi_gems_dir=${cpi_dir}/src/bosh_${cpi_name}_cpi

cleanup() {
  cd $cpi_gems_dir
  rm Gemfile*
}

trap cleanup EXIT

(
  cd $cpi_gems_dir
  cat > 'Gemfile' <<EOF
source "https://rubygems.org"

gem "bosh_${cpi_name}_cpi"
EOF

  bundle package
)
